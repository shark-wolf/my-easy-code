<idea-plugin>
  <id>com.my.coder</id>
  <name>my-easy-code</name>
  <vendor email="dev@example.com">Example</vendor>
  <description>Generate MyBatis code with custom templates and output paths</description>
  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.database</depends>
  <extensions defaultExtensionNs="com.intellij">
    <projectConfigurable instance="com.my.coder.settings.GeneratorSettingsConfigurable" id="com.my.coder.settings" displayName="MyBatis Generator"/>
    <postStartupActivity implementation="com.my.coder.StartupImporter"/>
    <editorNotificationProvider implementation="com.my.coder.TemplatePreviewNotificationProvider"/>
  </extensions>
  <actions>
    <action id="com.my.coder.GenerateMyBatisCodeAction" class="com.my.coder.GenerateMyBatisCodeAction" text="Generate MyBatis Code" description="Generate code from generator.yaml">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
      <add-to-group group-id="EditorPopupMenu" anchor="last"/>
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt G"/>
      <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta alt G"/>
    </action>
    <action id="com.my.coder.GenerateFromIdeaDatabaseAction" class="com.my.coder.GenerateFromIdeaDatabaseAction" text="Generate From IDEA Database" description="Generate code using selected tables from Database view">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
      <add-to-group group-id="DatabaseViewPopupMenu" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt D"/>
      <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta alt D"/>
    </action>
  </actions>
</idea-plugin>
